<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.androidappremotecontroljoystick.view_model.ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainActivity">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/pl2"
            tools:layout_editor_absoluteX="-40dp"
            tools:layout_editor_absoluteY="-28dp" />

        <LinearLayout
            android:id="@+id/outer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/form_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ip_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:hint="                                      Enter IP"
                    android:background="#51009688"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:text="" />

                <EditText
                    android:id="@+id/port_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:hint="                                    Enter Port"
                    android:background="#90009688"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:text="" />

                <Button
                    android:id="@+id/connect_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="#51009688"
                    android:text="Connect" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:weightSum="10">

                <!-- Joystick and Throttle -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <!-- Joystick -->
                    <com.example.androidappremotecontroljoystick.views.JoystickActivity
                        android:id="@+id/joystickActivity"
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        tools:ignore="MissingConstraints" />

                    <!-- Throttle -->
                    <SeekBar
                        android:id="@+id/throttle"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-164dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginBottom="335dp"
                        android:rotation="270" />

                </RelativeLayout>

                <!-- Rudder Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <!-- Rudder -->
                    <SeekBar
                        android:id="@+id/rudder"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>